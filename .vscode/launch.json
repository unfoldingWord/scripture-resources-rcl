{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug tests single run",
            "type": "node",
            "request": "launch",
            "env": {
                "CI": "true"
            },
            "runtimeExecutable": "yarn",
            "args": [
                "test:unit",
                "--runInBand",
                "--no-cache",
                "--watchAll"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}